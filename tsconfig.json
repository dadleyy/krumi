{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "target": "es5",
    "module": "es6",
    "strict": true,
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@krumpled/krumi/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/globals.d.ts"
  ]
}
